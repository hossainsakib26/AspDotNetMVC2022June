            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GenderID)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
